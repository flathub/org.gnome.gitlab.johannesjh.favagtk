/* release build of favagtk */
{
  "app-id": "org.gnome.gitlab.johannesjh.favagtk",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "favagtk",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=host"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    /* shared module, a gtk4 compatible version of webkitgtk is required */
    "requirements/webkitgtk.json",

    /* blueprint compiler for .ui files */
    "requirements/blueprint-compiler.json",

    /* machine learning libs, hand-written module because of tricky platform-specific packages */
    "requirements/python3-scikit-learn.json",

    /* main application dependencies for fava etc., generated using pip-compile and flatpak-pip-generator */
    "requirements/python3-main.json",

    /* optional dependencies for fava plugins */
    "requirements/python3-optional.json",

    /* the actual favagtk application */
    {
      "name": "favagtk",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/johannesjh/favagtk.git",
          "tag": "v0.2.1",
          "commit": "d46ea75d6598e750af46a1de3ac600691882b5f5"
        }
      ],
      "config-opts": ["-Dprofile=release"]
    }
  ]
}
